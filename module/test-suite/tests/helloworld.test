(define-module (test-suite test helloworld)
  #:use-module (test-suite lib)
  #:use-module (language php parse)
  #:use-module (system base compile))

(define (read-php-str str)
  (call-with-input-string str read-php))

(define-syntax parse-php-str
  (syntax-rules ()
    ((_ expression expected)
      (pass-if expression (equal? expected (read-php-str expression))))))

(define-syntax compile-php-str
  (syntax-rules ()
    ((_ expression expected)
      (pass-if expression
        (equal? expected
	  (with-output-to-string
	    (lambda ()
	      (compile (read-php-str expression) #:from 'php #:to 'value))))))))

(with-test-prefix "parser"
  (parse-php-str "hello world" '(begin (print (string "hello")) (print (string " ")) (print (string "world"))))
  (parse-php-str "<?php print \"hello world\"; ?>" '(begin (void) (print (string "hello world")) (void))))

(with-test-prefix "compile"
  (compile-php-str "hello world" "hello world")
  (compile-php-str "<?php print \"hello world\"; ?>" "hello world")
  (compile-php-str "hello <?php print \"world\"; ?>" "hello world")
  (compile-php-str "<?php print \"hello \"; ?>world" "hello world")
  (compile-php-str "hello<?php ?> world" "hello world")
  (compile-php-str "<?php return \"hello world\"; ?>" ""))

