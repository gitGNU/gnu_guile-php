(define-module (test-suite test concat)
  #:use-module (test-suite base)
  #:use-module (test-suite lib))

(with-test-prefix "compile"
  (compile-php-str "<?php print 'a' . 'b'; ?>" "ab")
  (compile-php-str "<?php print 'a' . 1; ?>" "a1")
  (compile-php-str "<?php print 1 . 'a'; ?>" "1a")
  (compile-php-str "<?php print 1 . 1; ?>" "11")
  (compile-php-str "<?php print true . false . true . null; ?>" "11")
  (compile-php-str "<?php $a = 'a' . 'b' . 'c' . 1 . FALSE . 2 . NULL . 3; print $a; ?>" "abc123"))

